<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--
    app:tabIndicatorColor=""                 // 下方滚动的下划线颜色
    app:tabSelectedTextColor=""              // tab被选中后，文字的颜色
    app:tabTextColor=""                      // tab默认的文字颜色
    app:tabMaxWidth="100dp"                  //tab最大宽度
    app:tabMinWidth="50dp"                   //tab最小宽度
    app:tabPaddingStart="10dp"               //距离开始位置
    app:tabIndicatorColor="@color/white"     //下划线颜色
    app:tabIndicatorHeight="2dp"             //下划线高度
    app:tabPaddingBottom="2dp"               //距离底部位置
    app:tabPaddingEnd="10dp"                 //距离尾端位置
    app:tabMode="fixed"                      //scrollable
    app:tabGravity="fill"
    app:tabRippleColor = "@android:color/transparent"  //点击阴影
    -->

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:tabBackground="@color/transparent"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/white"
        app:tabRippleColor = "@android:color/transparent"
        app:tabMode="fixed" />

</LinearLayout>
